{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/_document.js",
    "src/styles/globals.js",
    "src/components/input.jsx",
    "src/components/Task.stories.jsx",
    "src/services/api.js",
    "src/components/alert.stories.jsx",
    "src/services/axios.ts",
    "src/styles/login.ts",
    "src/components/layout.tsx",
    "src/components/switch.stories.jsx",
    "src/components/switch.jsx",
    "src/context/AuthContext.jsx",
    "src/pages/system/editProfile.jsx",
    "src/pages/system/post/[post].jsx",
    "src/pages/system/profile/[profile].jsx",
    "src/components/post.stories.jsx"
  ],
  "exclude": ["node_modules"]
}
